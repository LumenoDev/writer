        "jest": "^28.1.2",
        "rollup": "^2.75.7",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-vue": "^6.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
