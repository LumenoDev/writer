{
    "name": "@lumeno/writer",
    "author": "Lumeno",
    "version": "1.0.0",
    "license": "MIT",
    "description": "A minimal, Markdown editor with preview support and syntax-highlighting.",
    "repository": {
        "type": "git",
        "url": "https://github.com/LumenoDev/writer.git"
